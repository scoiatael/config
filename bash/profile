function _scoiatael_sh_init {
    test -e "${HOME}/.iterm2_shell_integration.bash" && source "${HOME}/.iterm2_shell_integration.bash"
    export GOPATH=$HOME/Documents/go

    local -a additional_user_paths=( /usr/local/sbin $HOME/.local/bin $HOME/Library/Python/2.7/bin /usr/local/opt/go/libexec/bin $HOME/.cargo/bin $HOME/.rvm/bin $GOPATH/bin)

    for p in $additional_user_paths
    do
        if test -d $p
        then
            export PATH="$p:$PATH"
        fi
    done

    which gpgconf && gpgconf --launch gpg-agent
    export SSH_AGENT_SOCK="$(gpgconf --list-dirs agent-ssh-socket)"

    ssh-add -l | grep -v 'no identities' || ssh-add -A ^/dev/null || ssh-add
    which thefuck && thefuck --alias
}

_scoiatael_sh_init > /dev/null
