#!/usr/bin/env elvish
use str

var @repos = (cat repos.txt)

for r $repos {
  var path = (str:trim-prefix $r "https://")
  if (str:has-prefix $r "git@") {
    var @host_path = (str:split ":" $r)
    var host = (str:trim-prefix $host_path[0] "git@")
    set path = $host/$host_path[1]
  }
  var dirs = (dirname $path)
  if ?(test -e $path) {
    echo $path exists
  } else {
    mkdir -p $dirs
    git clone $r $path
  }
}

# Local Variables:
# mode: elvish
# End:
