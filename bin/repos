#!/usr/bin/env elvish
use str

var @repos = (cat repos.txt)

for r $repos {
  var @host_path = (str:split ":" $r)
  var @proto_host = (str:split "@" $host_path[0])
  var host = $proto_host[1]
  var path = $host_path[1]
  var dirs = $host/(dirname $path)
  var target = $host"/"$path
  if ?(test -e $target) {
    echo $target exists
  } else {
    mkdir -p $dirs
    git clone $r $target
  }
}

# Local Variables:
# mode: elvish
# End:
