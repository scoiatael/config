[core]
	editor = vim
	excludesfile = ~/dotfiles/git/gitignore
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lga = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
  lgd = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -p

  rbc = rebase --continue
  rba = rebase --abort

  df = diff --color --color-words --abbrev
  su = submodule update --init --recursive

  ros = remote set-url origin
  r = remote -v

  bms="! git branch --merged | grep -v '*'"
  bmc="! git branch --merged | grep -v '*' | xargs git branch -d"

  la = config --get-regexp alias
  cm = checkout master
  cmp ="! git checkout master && git pull --rebase"

  prune = remote prune origin

  cb="checkout -b"
  co="checkout"
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[push]
	default = current
[url "git@github.com:"]
	insteadOf = gh:
[magit]
	hideCampaign = true
[include]
  path = ~/.gitconfig_custom
[diff "sopsdiffer"]
	textconv = sops -d
[magithub]
	online = false
[magithub "status"]
	includeStatusHeader = false
	includePullRequestsSection = false
	includeIssuesSection = false
[github]
	user = scoiatael
[status]
	short = true
[pull]
	rebase = true
[rebase]
	autoSquash = true
[gpg]
	program = gpg2
[init]
	defaultBranch = master
[commit]
	gpgsign = true
