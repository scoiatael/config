	email = lukasz.czaplinski@tooploox.com
	name = lukasz.czaplinski
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lga = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
  lgd = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -p
  df = diff --color --color-words --abbrev
  pr = pull --rebase
  su = submodule update --init --recursive

  ros = remote set-url origin
  r = remote -v

  bc = checkout -b

  bms="! git branch --merged | grep -v '*'"
  bmc="! git branch --merged | grep -v '*' | xargs git branch -d"

  la = config --get-regexp alias
  cm = checkout master
  cmp ="! git checkout master && git pull --rebase"

  prune = remote prune origin

  cb="checkout -b"
  co="checkout"
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[push]
	default = current
[url "git@github.com:"]
	insteadOf = gh:
